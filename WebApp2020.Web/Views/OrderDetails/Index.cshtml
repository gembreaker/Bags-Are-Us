@model IEnumerable<WebApp2020.Shared.Models.OrderDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Thank you, your order has been placed.</h4>
<h1>Your Order(s)</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOrdered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePurchased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.PaymentType)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.DateOrdered)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DatePurchased)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Quantity)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Product.ProductName)
			</td>
			<!--<td>
				@Html.DisplayFor(modelItem => item.PaymentType.ExpirationDate)
			</td>-->
			<td>
				<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
			</td>
		</tr>
}
    </tbody>
</table>
