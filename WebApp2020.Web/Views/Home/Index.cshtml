@{
    ViewData["Title"] = "Home Page";
}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
		<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
	</ol>
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="d-block w-100" src="~/Images/Image2.2.jpg" alt="Fjallraven Bags">
			<div class="captions">
				<h1>Discover our Fjallraven Products</h1>
			</div>
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="~/Images/Image1.jpg" alt="Handbags">
			<div class="captions">
				<h1>Handbags for all occassions</h1>
			</div>
		</div>
		<div class="carousel-item">
			<img class="d-block w-100" src="~/Images/Image3.jpg" alt="Cotton Bags">
			<div class="captions">
				<h1>Tote Bags</h1>
			</div>
		</div>
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<br />

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h2>Backpacks</h2>
			<p>Explore our wide range of backpacks.</p>
			<img src="~/Images/Backpacks.jpg" alt="Backpacks" style="height: 70%; width: 100%" />
		</div>
		<div class="col-md-4">
			<h2>Handbags</h2>
			<p>Discover our handbags.</p>
			<img src="~/Images/Handbags.jpg" alt="Handbags" style="height: 70%; width: 100%" />
		</div>
		<div class="col-md-4">
			<h2>Tote Bags</h2>
			<p>Search through our totebags.</p>
			<img src="~/Images/Totebags.jpg" alt="Totebags" style="height: 70%; width: 100%" />
		</div>
	</div>
</div>