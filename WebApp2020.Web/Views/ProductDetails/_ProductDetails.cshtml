@model WebApp2020.Shared.Models.ProductDetails;

<div class="col-12 col-sm-6 col-md-8 col-lg-3">
	<a asp-controller="ProductDetails" asp-action="Details" asp-route-id="@Model.ProductCode" class="nav-link">
		<p>
			<img src="@Url.Content($"~/Images/{@Model.ProductImage}")" class="img-fluid" alt="@Html.DisplayFor(model => model.ProductName) Product Image" />
		</p>
		<p class="text-dark d-sm-flex align-items-sm-end">
			<span class="product-name">
				@Html.DisplayFor(model => model.ProductName)
			</span>
		</p>
		<p class="d-flex justify-content-between">
			<span class="price">
				£@Model.Price
			</span>
		</p>
	</a>
</div>